(defwidget base_dynamic 
  [top_text
   bottom_text
   class_label_top
   class_label_bottom
   box_class_container]

  (box 
    :class box_class_container
    :space-evenly "false"
    :orientation "v"
    :valign "center"

    (label
      :class class_label_top
      :halign "start"
      :text top_text)

    (label
      :class class_label_bottom
      :halign "center"
      :text bottom_text)))
