(defwidget base_launcher
  [box_class
   button_class
   icon
   tooltip
   onclick
   height
   width]
    
  (box
    :class box_class
    :orientation "h"
    :halign "center"
    :valign "center"
    :height height
    :width width
    :active true
    :space-evenly true
    :tooltip tooltip

    (button
      :class button_class
      :onclick onclick
      icon)))
