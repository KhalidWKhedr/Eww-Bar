;; Active Window Widget
(defwidget active_window []
  (box :class "active_window"
       :orientation "v"
       :hexpand false
       :vexpand false
       :space-evenly false
       (label :class "current_workspace"
              :halign "start"
              :text "${current-workspace.title}")
       (label :class "workspace_sublabel"
              :halign "start"
              :text "${current-workspace.sublabel}")))
